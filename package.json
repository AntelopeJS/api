{
  "name": "@antelopejs/api",
  "version": "0.1.0",
  "description": "A flexible API module that implements the API interfaces of antelopejs with HTTP and WebSocket support",
  "keywords": [
    "antelopejs",
    "api",
    "http",
    "websocket",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntelopeJS/api.git"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.6.5",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev:prepare": "cd playground && ajs module imports install",
    "dev": "ajs project run -w -p playground",
    "format": "prettier --write .",
    "generate": "ajs module exports generate",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepack": "pnpm run build",
    "prepare": "ajs module imports install",
    "release": "pnpm run lint && pnpm run test && pnpm run prepack && release-it",
    "test": "ajs module test .",
    "changelog": "changelogen"
  },
  "antelopeJs": {
    "exportsPath": "dist/interfaces",
    "imports": [
      "core@beta",
      "logging@beta"
    ],
    "importsOptional": [],
    "defaultConfig": {
      "servers": [
        {
          "protocol": "http",
          "host": "localhost",
          "port": 8080
        }
      ]
    },
    "test": {
      "project": "src/test/antelope.test.json",
      "folder": "dist/test"
    }
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.0",
    "@types/chai": "^5.2.2",
    "@types/express": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.14.1",
    "@types/sinon": "^17.0.4",
    "@types/ws": "^8.18.1",
    "chai": "^5.2.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "release-it": "^19.0.2",
    "release-it-changelogen": "^0.1.0",
    "sinon": "^20.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  }
}
